@using ProjectFTK.Extensions

<ul class="navbar-nav">
@if (User?.Identity?.IsAuthenticated == true)
{
    <li class="nav-item">
        <img src="@User.Identity.PictureUrl()" />
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-controller="Auth" asp-action="GoogleSignOut" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Auth" asp-action="GoogleLogin" asp-route-isTeacher="true">Log In With Google</a>
    </li>
}
</ul>

